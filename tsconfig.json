{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": [ "es2015" ],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true,
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ]
  }
